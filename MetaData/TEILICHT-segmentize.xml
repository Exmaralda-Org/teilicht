              </cmd:Contact>
            </cmd:Creator>
          </cmd:Creators>
        </cmd:Creation>
        <cmd:Operations>
          <cmd:Operation>
            <cmd:Name>OrthoNormalVerbraucher</cmd:Name>
            <cmd:Input>
              <cmd:ParameterGroup>
                <cmd:Name>Input Parameters</cmd:Name>
                <cmd:Parameters>
                  <cmd:Parameter>
                    <cmd:Name>type</cmd:Name>
                    <cmd:WebServiceArgValue/>
