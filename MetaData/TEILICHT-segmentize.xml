                      </cmd:ParameterValue>
                    </cmd:Values>
                  </cmd:Parameter>
                  <cmd:Parameter>
                    <cmd:Name>lang</cmd:Name>
                    <cmd:WebServiceArgValue/>
                    <cmd:AllowManualSelectionFallback>true</cmd:AllowManualSelectionFallback>
                  </cmd:Parameter>
                  <cmd:Parameter>
                    <cmd:Name>version</cmd:Name>
                    <cmd:WebServiceArgValue/>
                    <cmd:AllowManualSelectionFallback>true</cmd:AllowManualSelectionFallback>
                    <cmd:Values>
                      <cmd:ParameterValue>
                        <cmd:Value>0.3</cmd:Value>
                      </cmd:ParameterValue>
                    </cmd:Values>
                  </cmd:Parameter>
                  <cmd:Parameter>
                    <cmd:Name>level</cmd:Name>
                    <cmd:WebServiceArgValue/>
                    <cmd:AllowManualSelectionFallback>false</cmd:AllowManualSelectionFallback>
                    <cmd:Values>
                      <cmd:ParameterValue>
                        <cmd:Value>minimal</cmd:Value>
                      </cmd:ParameterValue>
                      <cmd:ParameterValue>
                        <cmd:Value>basic</cmd:Value>
                      </cmd:ParameterValue>
                      <cmd:ParameterValue>
