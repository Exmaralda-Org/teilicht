  <ns2:Components>
    <cmd:WebLichtWebService>
      <cmd:Service>
        <cmd:Name>ISO/TEI Spoken Transcript segmentizer</cmd:Name>
        <cmd:Description>This service converts XML (pre-)conformant to ISO-24624:2016(E)-TEI-annotated texts; a TEI-conformant XML document containing &lt;u&gt; elements which contain plain text formatted according to a transcription convention (generic, cGAT minimal, cGAT basic) and potentially &lt;anchor&gt; elements referring to the &lt;timeline&gt;. This can be the output of the TEILicht plain text conversion. A fallback `lang` parameter can be given. A parameter `level` describes the convention (generic, minimal, basic).</cmd:Description>
        <cmd:Description type="short">TEILicht: Plain text to ISO 24624:2016(E) segmentation by transcription convention</cmd:Description>
        <cmd:ApplicationType>webService</cmd:ApplicationType>
        <cmd:TypeOfWebservice>RESTful</cmd:TypeOfWebservice>
        <cmd:url>https://clarin.ids-mannheim.de/teilicht/services/segmentize</cmd:url>
        <cmd:LifeCycleStatus>development</cmd:LifeCycleStatus>
        <cmd:PublicationDate>2018-10-18T00:00:00Z</cmd:PublicationDate>
        <cmd:LastUpdate>2019-09-29T16:04:25.135Z</cmd:LastUpdate>
